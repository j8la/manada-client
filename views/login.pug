doctype html
html
    head
        title Login
        link(href='css/manada.css', rel='stylesheet')
        link(href='img/manada.png', type='image/png', rel='stylesheet')
    body
        div(id="login")
            div(id="header-login")
            div(id="credentials")
                form(action="/login" method="post")
                    br
                    p Login: 
                    input(type="text" name="login" style="width: 240px;")
                    br
                    br
                    p Password: 
                    input(type="password" name="password" style="width: 240px;")
                    br
                    br
                    input(type="submit" value="Connect")